@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="max-width: 450px; margin: 40px auto;">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-unlock-alt"></i> Quên mật khẩu</h3>
        </div>
        <div class="panel-body">
            <p>Nhập email đã đăng ký để nhận hướng dẫn đặt lại mật khẩu.</p>
            @using (Html.BeginForm("ForgotPassword", "User", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" name="Email" id="Email" class="form-control" required placeholder="Nhập email của bạn" />
                </div>
                <button type="submit" class="btn btn-primary btn-block" style="background-color:#0094ff; border:none;">Gửi yêu cầu</button>
            }
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info" style="margin-top:15px;">@ViewBag.Message</div>
            }
        </div>
    </div>
</div>