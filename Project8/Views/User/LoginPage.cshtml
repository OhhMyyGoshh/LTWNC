@model WebBanSach.Areas.Admin.Models.LoginModel
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="panel-title">Đăng nhập</div>
        </div>
        <div style="padding-top:30px" class="panel-body">
            <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

            @using (Html.BeginForm("LoginPage", "User", FormMethod.Post))

            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    @Html.TextBoxFor(model => model.TaiKhoan, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "Tên đăng nhập / Email / Số điện thoại" })
                    @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                </div>
                <small class="text-muted" style="margin-left: 15px; margin-bottom: 10px; display: block;">Bạn có thể đăng nhập bằng tên đăng nhập, email hoặc số điện thoại</small>

                <div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control", @placeholder = "Mật khẩu" })
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                </div>

                <div class="input-group">
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(model => model.GhiNho, new { id = "login-remember" }) Ghi nhớ?
                        </label>
                    </div>
                </div>

                <div style="margin-top:10px" class="form-group">
                    <div class="col-sm-12 controls">
                        <button type="submit" class="btn btn-primary" style="background-color:#0094ff; border:none;">Đăng nhập</button>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12 control">
                        <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                            <a href="/User/ForgotPassword" style="color:#0094ff; float:right;">Quên mật khẩu?</a>
                            <a href="/User/LoginOTP" style="color:#0094ff; margin-right: 10px;">Đăng nhập bằng OTP</a> | 
                            Bạn không có tài khoản!
                            <a href="/User/Register">Đăng kí tại đây</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script>
</script>
<script src="/Scripts/login-validate.js"></script>
</script>

