@model IEnumerable<WebBanSach.Models.Data.DonDatHang>

@{ ViewBag.Title = "Order";
                Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml"; }

<h2>Quản lý đơn hàng</h2>

<div class="row" style="margin-bottom: 15px;">
    <div class="col-md-12">
        <div class="well well-sm">
            <form method="get" action="/Admin/Home/Order" class="form-inline">
                <div class="form-group">
                    <label>Từ ngày:</label>
                    <input type="date" name="fromDate" id="fromDate" value="@ViewBag.FromDate" class="form-control" />
                </div>
                <div class="form-group" style="margin-left: 10px;">
                    <label>Đến ngày:</label>
                    <input type="date" name="toDate" id="toDate" value="@ViewBag.ToDate" class="form-control" />
                </div>
                <div class="form-group" style="margin-left: 10px;">
                    <label>Trạng thái:</label>
                    <select name="status" id="statusFilter" class="form-control">
                        <option value="">Tất cả</option>
                        <option value="0" @(ViewBag.Status == 0 ? "selected" : "")>Chờ xác nhận</option>
                        <option value="1" @(ViewBag.Status == 1 ? "selected" : "")>Đã xác nhận</option>
                        <option value="2" @(ViewBag.Status == 2 ? "selected" : "")>Đang giao</option>
                        <option value="3" @(ViewBag.Status == 3 ? "selected" : "")>Đã giao</option>
                        <option value="4" @(ViewBag.Status == 4 ? "selected" : "")>Đã hủy</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary" style="margin-left: 10px;">
                    <i class="fa fa-filter"></i> Lọc
                </button>
                <a href="/Admin/Home/Order" class="btn btn-default" style="margin-left: 5px;">
                    <i class="fa fa-refresh"></i> Đặt lại
                </a>
                @if (ViewBag.HasFilter != null && ViewBag.HasFilter == true)
                {
                    <span class="label label-success" style="margin-left: 15px; padding: 8px 12px; font-size: 13px;">
                        <i class="fa fa-check"></i> Đang lọc - Tìm thấy: @ViewBag.TotalOrders đơn hàng
                    </span>
                }
                else if (ViewBag.TotalOrders != null)
                {
                    <span class="label label-default" style="margin-left: 15px; padding: 8px 12px; font-size: 13px;">
                        Tổng: @ViewBag.TotalOrders đơn hàng
                    </span>
                }
            </form>
        </div>
    </div>
</div>

@if (Model.Count() == 0)
{
    <div class="alert alert-warning text-center" style="margin: 30px 0; padding: 30px;">
        <i class="fa fa-inbox fa-3x" style="color: #999;"></i>
        <h4 style="margin-top: 15px;">Không tìm thấy đơn hàng nào</h4>
        <p>Vui lòng thử lại với bộ lọc khác hoặc đặt lại bộ lọc.</p>
    </div>
}
else
{
    <table class="table" id="myTable">
    <thead>
        <tr>
            <th>Mã ĐH</th>
            <th>Khách hàng</th>
            <th>Ngày đặt</th>
            <th>Ngày giao</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            var statusClass = "";
            var statusText = "";
            switch (item.TrangThaiDonHang ?? 0)
            {
                case 0: statusClass = "label-warning"; statusText = "Chờ xác nhận"; break;
                case 1: statusClass = "label-info"; statusText = "Đã xác nhận"; break;
                case 2: statusClass = "label-primary"; statusText = "Đang giao"; break;
                case 3: statusClass = "label-success"; statusText = "Đã giao"; break;
                case 4: statusClass = "label-danger"; statusText = "Đã hủy"; break;
            }

            decimal tongTien = item.ChiTietDDHs.Sum(x => (x.SoLuong ?? 0) * (x.DonGia ?? 0));
            decimal tongTienSauGiam = tongTien - (item.GiamGia ?? 0);
            
            <tr id="row_@item.MaDDH">
                <td>
                    <strong>#@item.MaDDH</strong>
                </td>
                <td>
                    @(item.KhachHang != null ? item.KhachHang.TenKH : "N/A")
                </td>
                <td>
                    @item.NgayDat.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @item.NgayGiao.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @if (item.GiamGia > 0)
                    {
                        <div>
                            <small style="text-decoration: line-through; color: #999;">@tongTien.ToString("N0") đ</small><br/>
                            <strong style="color: #d9534f;">@tongTienSauGiam.ToString("N0") đ</strong>
                        </div>
                    }
                    else
                    {
                        <strong>@tongTien.ToString("N0") đ</strong>
                    }
                </td>
                <td>
                    <span class="label @statusClass" id="status_@item.MaDDH">@statusText</span>
                </td>
                <td>
                    <select class="form-control input-sm" id="status_dropdown_@item.MaDDH" onchange="updateOrderStatus(@item.MaDDH, this.value)" style="width: 150px; display: inline-block;">
                        <option value="0" @(item.TrangThaiDonHang == 0 ? "selected" : "")>Chờ xác nhận</option>
                        <option value="1" @(item.TrangThaiDonHang == 1 ? "selected" : "")>Đã xác nhận</option>
                        <option value="2" @(item.TrangThaiDonHang == 2 ? "selected" : "")>Đang giao</option>
                        <option value="3" @(item.TrangThaiDonHang == 3 ? "selected" : "")>Đã giao</option>
                        <option value="4" @(item.TrangThaiDonHang == 4 ? "selected" : "")>Đã hủy</option>
                    </select>
                    @Html.ActionLink("Chi tiết", "DetailsOrder", new { id = item.MaDDH }, new { @class = "btn btn-info btn-sm", style = "margin-left: 5px;" })
                </td>
            </tr>
        }
    </tbody>
</table>
}

<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
            },
            "order": [[0, "desc"]]
        });
    });

    function updateOrderStatus(orderId, newStatus) {
        if (!confirm('Bạn có chắc muốn thay đổi trạng thái đơn hàng #' + orderId + ' không?')) {
            location.reload();
            return;
        }

        $.ajax({
            url: '/Admin/Home/UpdateOrderStatus',
            type: 'POST',
            data: { orderId: orderId, status: newStatus },
            success: function (response) {
                if (response.success) {
                    alert(response.message);
                    
                    // Cập nhật label hiển thị
                    var statusClass = '';
                    var statusText = '';
                    switch (parseInt(newStatus)) {
                        case 0: statusClass = 'label-warning'; statusText = 'Chờ xác nhận'; break;
                        case 1: statusClass = 'label-info'; statusText = 'Đã xác nhận'; break;
                        case 2: statusClass = 'label-primary'; statusText = 'Đang giao'; break;
                        case 3: statusClass = 'label-success'; statusText = 'Đã giao'; break;
                        case 4: statusClass = 'label-danger'; statusText = 'Đã hủy'; break;
                    }
                    
                    $('#status_' + orderId)
                        .removeClass('label-warning label-info label-primary label-success label-danger')
                        .addClass(statusClass)
                        .text(statusText);
                } else {
                    alert('Lỗi: ' + response.message);
                    location.reload();
                }
            },
            error: function (xhr, status, error) {
                alert('Có lỗi xảy ra: ' + error);
                location.reload();
            }
        });
    }
</script>
